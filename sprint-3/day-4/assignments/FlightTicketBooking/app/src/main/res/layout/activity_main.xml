<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/firstrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fly_to_seoul"
        android:background="#800080"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:gravity="center"
        app:drawableStartCompat="@drawable/ic_previussymbolflight" />
    <View
        android:id="@+id/bigrect"
        android:layout_below="@+id/firstrect"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/rect1"
        />
    <EditText
        android:id="@+id/ed1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="140dp"
        android:drawableStart="@drawable/ic_carbon_user_filled"
        android:text="1 Adult, Economy"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/ed2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="180dp"
        android:drawableStart="@drawable/ic_locationsymbol"
        android:text="@string/seoul_korea"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="220dp"
        android:drawableStart="@drawable/ic_flightsymbol"
        android:text="Choose Destination"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="260dp"
        android:drawableStart="@drawable/ic_bx_bx_calendar"
        android:text="Select Date"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/khumbuname"
        android:layout_below="@+id/bigrect"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Khumbu Valley, Nepal NonStop - 5h 16m+"
        android:layout_marginStart="200dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="146dp"
        android:layout_height="118dp"
        android:layout_below="@+id/bigrect"
        android:layout_marginVertical="50dp"
        android:src="@drawable/khumbuvalley"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/maldives"
        android:layout_below="@+id/bigrect"
        android:layout_marginStart="20dp"
        android:layout_marginTop="160dp"

        />
    <TextView
        android:id="@+id/maldives"
        android:layout_below="@+id/bigrect"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Maldives, South Asia NonStop - 8h 24m+"
        android:layout_marginStart="200dp"
        android:textStyle="bold"
        />

</RelativeLayout>