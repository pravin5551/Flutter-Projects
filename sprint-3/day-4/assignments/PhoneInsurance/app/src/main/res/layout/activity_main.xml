<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="bold"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Pending Activation"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#C4C4C4"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_arrowphone"
        />
    <TextView
        android:id="@+id/date"
        android:layout_below="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="2 September , 2020"
        />
    <TextView
        android:id="@+id/status"
        android:layout_below="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FE122E"
        android:text="Status : Expired"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/mobile"
        android:layout_width="90dp"
        android:layout_height="83dp"
        android:layout_below="@+id/status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_mobile_phone_off" />
    <TextView
        android:id="@+id/nexus"
        android:layout_below="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nexus 5 Insurance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/activeinsurance"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nexus"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="#18F148"
        android:text="Activate Insurance now" />
    <ImageView
        android:id="@+id/rect1"
        android:layout_below="@+id/activeinsurance"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rect"
        />
    <TextView
        android:id="@+id/device"
        android:layout_below="@+id/activeinsurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device :                                                            LGE Nexus 5"
        android:textSize="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/term"
        android:layout_below="@+id/activeinsurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insurance term :                                              12 Months"
        android:textSize="15dp"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginStart="15sp"
        />
    <TextView
        android:id="@+id/cvrg"
        android:layout_below="@id/rect1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coverage"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:layout_below="@+id/rect1"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/name"
        android:layout_below="@+id/cvrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All drops and breakage including cracked screen"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="17sp"
        />

</RelativeLayout>