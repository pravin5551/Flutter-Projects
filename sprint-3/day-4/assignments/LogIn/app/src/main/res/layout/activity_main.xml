<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_height="50dp"
        android:background="#0583EA"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="349dp"
        android:padding="10dp"
        android:src="@drawable/ic_ant_design_arrow_left_outlined" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:text="Email"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="170dp"
        android:text="Password"
        android:hint="(minimum 6 charectors)"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USE PHONE NUMBER"
        android:gravity="center"
        android:layout_marginVertical="250sp"
        android:textColor="#0583EA"
        />
    <View
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/upperblueloginrect"
        android:layout_marginVertical="300sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="15dp"
        android:layout_marginVertical="310sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="15dp"
        android:textColor="#858992"
        android:layout_marginVertical="330sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_marginVertical="400sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />
    <View
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/rectface"
        android:layout_marginVertical="600sp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_width="wrap_content"
        android:drawableStart="@drawable/ic_ion_logo_facebook"
        android:layout_height="wrap_content"
        android:layout_marginVertical="600dp"
        android:layout_marginHorizontal="85dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTINUE WITH FACEBOOK"
        android:textColor="#FFFFFF"
        android:layout_marginVertical="610dp"
        android:layout_centerHorizontal="true"
        />
    <View
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/rectgoogle"
        android:layout_marginVertical="650dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_width="wrap_content"
        android:drawableStart="@drawable/ic_flat_color_icons_google"
        android:layout_height="wrap_content"
        android:layout_marginVertical="650dp"
        android:layout_marginHorizontal="85dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTINUE WITH FACEBOOK"
        android:textColor="#000000"
        android:layout_marginVertical="663dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>