<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/ic_previusesymbolplaystore"
        android:background="#079527"
        android:drawableEnd="@drawable/ic_searchsymbol"
        android:id="@+id/start"
        android:drawablePadding="50dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rect"
        android:layout_marginVertical="60dp"
        android:id="@+id/bigrect"
        />
    <ImageButton
        android:layout_below="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_carbon_play_outline"
        android:layout_marginVertical="90dp"
        android:layout_centerHorizontal="true"
        
        />
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rect"
        android:layout_below="@+id/bigrect"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/sqr"
        />
    <View
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:background="@drawable/rectgray"
        android:id="@+id/rect1"
        android:layout_below="@+id/bigrect"
        android:layout_marginVertical="57dp"
        android:layout_marginHorizontal="140dp"
        />
    <View
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:background="@drawable/rectgray"
        android:id="@+id/rect2"
        android:layout_below="@+id/bigrect"
        android:layout_marginVertical="28dp"
        android:layout_marginHorizontal="140dp"
        />
    <View
        android:layout_width="190dp"
        android:layout_height="20dp"
        android:background="@drawable/rectgray"
        android:id="@+id/rect3"
        android:layout_below="@+id/bigrect"
        android:layout_marginHorizontal="140dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sqr">

        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRY NOW"
            android:layout_weight="1"
            android:background="@drawable/outline"
            android:layout_margin="18dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_weight="1"
            android:background="@drawable/outline"
            android:id="@+id/btn"
            android:text="INSTALL" />

    </LinearLayout>

    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_ellipse_1"
        android:layout_below="@+id/rect1"
        android:layout_marginVertical="70dp"
        android:layout_marginHorizontal="40dp"

        />
    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_ellipse_1"
        android:layout_below="@+id/rect1"
        android:layout_marginVertical="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/circle"

        />
    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_ellipse_1"
        android:layout_below="@+id/rect1"
        android:layout_marginVertical="70dp"
       android:layout_marginHorizontal="290dp"
        android:id="@+id/circle3"

        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/rectbig"
        android:id="@+id/rect4"
        android:layout_below="@+id/circle"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="140dp"
        android:layout_margin="22dp"
        />

    <View
        android:id="@+id/rect5"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="620dp"
        android:background="@drawable/rectbig2" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginVertical="8dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@+id/bigrect"
        android:background="@drawable/ic_bi_bookmarks" />
</RelativeLayout>