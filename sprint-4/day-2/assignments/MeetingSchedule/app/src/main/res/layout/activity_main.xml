<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Meeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_14"
        android:textSize="@dimen/dp_25"
                 />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_below="@+id/meeting"
        android:textSize="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"

        />
    <EditText
        android:id="@+id/nameOd"
        style="@style/CreatAcoountEdittextStyle"
        android:text="Nrupul Dev"
        android:layout_below="@+id/name"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/date"
        android:orientation="horizontal"
        android:layout_below="@id/nameOd">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tue - 22 December 2020"
            android:background="@drawable/editext_rect_bg"
           android:layout_margin="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11:30am"
            android:background="@drawable/editext_rect_bg"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People to invite"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_below="@+id/date"
        android:textSize="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"

        />
    <EditText
        android:id="@+id/nameinvite"
        style="@style/CreatAcoountEdittextStyle"
        android:text="Prateek"
        android:layout_below="@+id/invite"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/prateek"
        android:layout_below="@+id/nameinvite"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/prateek_sukla"
        android:layout_marginStart="@dimen/dp_14"
        />
    <ImageView
        android:id="@+id/jeffbejos"
        android:layout_below="@+id/nameinvite"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/jeff_bezos"
        android:layout_marginStart="90dp"
        />
    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/jeffbejos"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/rect_bg"
        />
    <ImageView
        android:id="@+id/line"
        android:layout_below="@id/jeffbejos"
        android:layout_width="300dp"
        android:layout_marginTop="@dimen/dp_95"
        android:layout_centerHorizontal="true"
        android:layout_height="3dp"
        android:src="@drawable/line"
        />
    <TextView
        android:id="@+id/prateekname"
        android:layout_below="@+id/prateek"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="  Prateek Shukla"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/prateek_sukla"
        />
    <TextView
        android:id="@+id/jeffname"
        android:layout_below="@+id/prateekname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="  Jeff Bejos"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/jeff_bezos"
        />
    <TextView
        android:id="@+id/slack"
        android:layout_below="@+id/jeffname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="  Notify people on Slack ?"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_slack"
        />
    <Button
        android:id="@+id/btncreate"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/slack"
        android:text="Create Meeting"
        android:layout_centerHorizontal="true"
        android:background="#8095FF"
        android:layout_marginTop="@dimen/dp_14"
        />

</RelativeLayout>