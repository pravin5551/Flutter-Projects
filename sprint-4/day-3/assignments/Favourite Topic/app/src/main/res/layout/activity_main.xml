<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/topic"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:background="#0583EA"
        android:drawableStart="@drawable/ic_previussymbolflight"
        android:gravity="center"
        android:text="What topic do you love? "
        android:textSize="@dimen/dp_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/topic"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/topic"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/box1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/editext_rect_bg"
            android:gravity="center"
            android:text="Books"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />

        <TextView
            android:id="@+id/box2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/rect_bg"
            android:gravity="center"
            android:text="Podcast"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/row1"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@+id/row1"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/box3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/rect_bg"
            android:gravity="center"
            android:text="News"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />

        <TextView
            android:id="@+id/box4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/rect_bg"
            android:gravity="center"
            android:text="Business"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/row2"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@+id/row2"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/box5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:background="@drawable/rect_bg"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Entertainment"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />

        <TextView
            android:id="@+id/box6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/editext_rect_bg"
            android:gravity="center"
            android:text="Sports"

            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/row3"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@+id/row3"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/box7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:background="@drawable/editext_rect_bg"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Technology"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />

        <TextView
            android:id="@+id/box8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/rect_bg"
            android:gravity="center"
            android:text="Pronunciation"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/row4"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@+id/row4"
        tools:layout_editor_absoluteX="-31dp">

        <TextView
            android:id="@+id/box9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:background="@drawable/rect_bg"
            android:gravity="center"
            android:text="Grammer"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />

        <TextView
            android:id="@+id/box10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_weight="1"
            android:background="@drawable/rect_bg"
            android:gravity="center"
            android:text="Health"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_25" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rect_big_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row5"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rect_continue_bg"
        android:text="Continue"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn"
        app:layout_constraintTop_toBottomOf="@+id/row5"
        app:layout_constraintVertical_bias="0.96" />
</androidx.constraintlayout.widget.ConstraintLayout>