<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instagram"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        app:drawableStartCompat="@drawable/ic_previussymbol" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Instagram"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginVertical="40dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginVertical="100dp"
        android:text="@string/discovering_and_telling_stories_from_around_the_world_founded_in_2010_by_kevin_and_mikeyk"
        android:textSize="20sp"
        android:textColor="#000000"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_instagram_1"
        android:layout_marginHorizontal="300dp"
        android:layout_marginVertical="100dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/following"
        android:layout_marginVertical="260dp"
        />

    
    
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="250dp"
        android:layout_marginVertical="260dp"
        android:text="@string/message"
        />
     <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="250dp"
        android:layout_marginVertical="260dp"
        android:text="@string/message"
        />

    <ImageView
        android:layout_width="208dp"
        android:layout_height="170dp"
        android:background="@mipmap/ic_launcher"
        android:layout_marginVertical="400dp"
        />

    <ImageView
        android:layout_width="205dp"
        android:layout_height="181dp"
        android:layout_marginVertical="550dp"
        android:background="@mipmap/ic_launcher" />

    <ImageView
        android:layout_width="205dp"
        android:layout_height="181dp"

        android:layout_alignParentEnd="true"
        android:layout_marginVertical="550dp"
        android:layout_marginEnd="3dp"
        android:background="@mipmap/ic_launcher" />

    <ImageView
        android:layout_width="202dp"
        android:layout_height="166dp"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="400dp"
        android:background="@mipmap/ic_launcher" />

</RelativeLayout>
